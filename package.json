{
  "name": "token-price-alert-bot",
  "version": "1.0.0",
  "description": "All-round bot for alerting the price of a BSC (BEP-20) Token in all your devices",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">= 18.12 <19"
  },
  "scripts": {
    "tsc": "tsc -p tsconfig.json",
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev2": "tsc --watch & NODE_ENV=development nodemon build",
    "cli": "ts-node --esm src/main.ts",
    "start": "npm run build && node build/index.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "dev:watch": "tsc -p tsconfig.json && node build/src/index.js",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write ."
  },
  "keywords": [
    "bot",
    "telegram-bot",
    "ethereum",
    "blockchain",
    "discord-bot",
    "web3",
    "whatsapp-bot",
    "email-bot",
    "sms-bot"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "discord.js": "^14.11.0",
    "dotenv": "^16.0.3",
    "ethers": "^6.5.1",
    "node-fetch": "^3.3.1",
    "node-mailjet": "^6.0.2"
  }
}
